public class IntegerToString {
	public static void main(String[] args) {
		// valueOf() 괄호안에 문자열로 바꾸고 싶은 값을 입력; 
		String strNum =  String.valueOf(12345);
		System.out.println(strNum);
		
		int i = 5055;
		String strNum2 = "" + i; // 문자열로 변환시킴;
		
		System.out.println(i + 100); // 정수라서 더해짐;
		System.out.println(strNum2 + 100); // 문자열이라서 결합이 일어남;
		
		System.out.println(strNum2.charAt(3)); // 5055 의 4번째 자리 수인 5 출력
		
	}
}